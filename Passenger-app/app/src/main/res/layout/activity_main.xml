<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MyTrips"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MyTripsButton"
        android:layout_width="151dp"
        android:layout_height="73dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="57dp"
        android:text="@string/my_trips"
        app:layout_constraintBottom_toTopOf="@+id/allTripsButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/allTripsButton"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="172dp"
        android:onClick="allTripsBtnClick"
        android:text="@string/search_for_trips"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyTripsButton" />
</android.support.constraint.ConstraintLayout>